
<div class="shop-container">
    <div class="shop-banner">
       <%= cl_image_tag @shop.photo.key, class: "shop-bannner-img" %>
      <h1><%= @shop.name %></h1>
       <%= link_to favorite_text, favorites_update_path(shop: @shop), id: 'favorite_link', remote: true %>
    </div>
</div>

<div class=job-booking>
    <h2>Services</h2>
        <%= simple_form_for [@shop, @booking] do |f| %>
        <%= f.association :job, as: :check_boxes, collection: Job.where(shop: @shop) %>
        <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"}, style: "width:200px" %>
        <%= f.submit 'Make Booking' %>
        <% end %>
    </div>
</div>


