<div class="service-tracker-container">
  <div class="service-tracker-title">
  <h1>Service Tracker</h1>
</div>

    <% @bookings = @bookings.sort_by { |b| b.date } %>
      <% @bookings.each do |booking| %>
          <ul>
            <% if booking.date >= Date.today %>
             <div class="bookings-order-cards">
                <div class="order-info">
                   <li><%= booking.job.name %> Customer: <%= booking.user.first_name%> <%= booking.user.last_name %></li>

                   <li><%= booking.date %></li>
                </div>
                </div>
                 </ul>
            <% end %>
       <% end %>
</div>








