                   <li><%= order.job.name %> Customer: <%= order.user.first_name%> <%= order.user.last_name %></li>
                   <li><%= order.date %></li>
                <div class="order-shop">
                </div>
                </div>
                 </ul>
      <% end %>
            </div>


<div class="bookings-container">
  <div class="bookings-title">
                 <h1>Order History</h1>
  </div>

  <br>
    <div class="bookings-orders">


      <% @bookings.each do |booking| %>
          <ul>
             <div class="bookings-order-cards">
                <div class="order-info">
                   <li><%= booking.date %> - <%= booking.job.name %>:</li>
                <div class="order-shop">
                  <li><%= booking.job.shop.name %></li>
                </div>
                </div>
                     <div class="order-price">
                        <li>Â£<%= booking.job.price %></li>
                           <%= link_to new_shop_review_path(booking.job.shop) %>
          </ul>
      <% end %>
            </div>
    </div>
        <div class="favorite-shops-title">
          <h1>Top Shops</h1>
        </div>
        </div>

    <% current_user.favorites.each do |favorite| %>
        <div class="favorite-cards">
           <%= link_to shop_path(favorite.shop), class: 'card-link', id: "shop_#{favorite.shop.id}" do %>
                <%= cl_image_tag(favorite.shop.photo.key, :transformation=>[{:width=>220, :crop=>"fill", :effect=>"saturation:50", :radius=>5, :responsive => true}]) %>
                <div class="shop-card-text">
                  <h5><%= favorite.shop.name %></h5>
                  <p>Open Hours: <%= favorite.shop.open_hours%></p>
                  <p>Rating: CHANGE</p>
                </div>
              <% end %>
          <% end %>
        </div>

</div>


